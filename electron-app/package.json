{
  "name": "videotranslator",
  "version": "1.0.0",
  "description": "Drag and drop video to translate audio",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "canvas-confetti": "^1.9.4",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.antigravity.videotranslator",
    "productName": "VideoTranslator",
    "mac": {
      "target": "dmg",
      "icon": "icon.png",
      "extraResources": [
        {
          "from": "../dist/video_processor",
          "to": "video_processor"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png",
      "extraResources": [
        {
          "from": "../dist/video_processor.exe",
          "to": "video_processor.exe"
        }
      ]
    }
  }
}